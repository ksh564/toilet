<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"


              android:background="@drawable/eme_back"
              android:layout_height="210dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/test1"
                android:id="@+id/event_nickimg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="페르시안"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:id="@+id/event_nickname"
                android:layout_marginTop="15dp"/>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:textColor="#000000"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="보상"/>-->

                <TextView
                    android:layout_width="140dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="미래프라자개방화장실"
                    android:id="@+id/toilet_name"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:id="@+id/toilet_distance"
                    android:text="1000"
                    android:gravity="right"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="m"
                     />

            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:textColor="#000000"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="보상"/>-->

                <ImageView
                    android:layout_width="24dp"
                    android:src="@drawable/gold"
                    android:layout_marginLeft="5dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:layout_width="130dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_cost"

                    android:text="1000"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:id="@+id/review_rating" />

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_marginLeft="85dp"
            android:layout_width="80dp"
            android:textColor="#ff5787"
            android:layout_height="30dp"
            android:text="2017-01-01"
            android:layout_marginTop="20dp"
            android:id="@+id/event_date" />


        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:id="@+id/frameLayout2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <Button
                android:layout_width="wrap_content"
                android:background="#00000000"
                android:textColor="#ff5787"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="완료"
                android:clickable="false"
                android:focusable="false"
                android:visibility="invisible"
                android:id="@+id/state_done"
                android:layout_gravity="left|center_vertical" />

            <Button
                android:layout_width="wrap_content"
                android:background="#00000000"
                android:textColor="#f71414"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:text="진행중"
                android:clickable="false"
                android:focusable="false"
                android:visibility="visible"
                android:id="@+id/state_ing"
                android:layout_gravity="left|center_vertical" />

            <Button
                android:layout_width="wrap_content"

                android:background="#00000000"
                android:textColor="#ffff00"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="대기중"
                android:clickable="false"
                android:focusable="false"
                android:visibility="invisible"
                android:id="@+id/state_accept"
                android:layout_gravity="left|center_vertical" />

        </FrameLayout>



    </LinearLayout>




</LinearLayout>

